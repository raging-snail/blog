---
import dayjs from "dayjs";
import utc from "dayjs/plugin/utc";
import timezone from "dayjs/plugin/timezone";
import IconCalendar from "@/assets/icons/IconCalendar.svg";
import { SITE } from "@/config";

dayjs.extend(utc);
dayjs.extend(timezone);

export interface Props {
  class?: string;
  size?: "sm" | "lg";
  timezone: string | undefined;
  pubDatetime: string | Date;
  modDatetime: string | Date | undefined | null;
}

const {
  pubDatetime,
  modDatetime,
  size = "sm",
  class: className = "",
  timezone: postTimezone,
} = Astro.props;

/* ========== Formatted Datetime ========== */
// 获取时区设置
const tz = postTimezone || SITE.timezone;
const formatPattern = "YYYY-MM-DD HH:mm";

// 处理发布时间
const pubDateObj = dayjs(pubDatetime).tz(tz);
const pubDateStr = pubDateObj.format(formatPattern);

// 处理更新时间
// 只有当 modDatetime 存在且晚于 pubDatetime 时才视为有效更新
const isModified = modDatetime && modDatetime > pubDatetime;
const modDateObj = isModified ? dayjs(modDatetime).tz(tz) : null;
const modDateStr = modDateObj ? modDateObj.format(formatPattern) : null;
---

<div class:list={["flex items-center gap-x-2 opacity-80", className]}>
  <IconCalendar
    class:list={[
      "inline-block size-6 min-w-[1.375rem]",
      { "scale-90": size === "sm" },
    ]}
  />

  <span class:list={["flex items-center text-sm", { "sm:text-base": size === "lg" }]}>
    <span class="mr-1">Published:</span>
    <time datetime={pubDateObj.toISOString()}>{pubDateStr}</time>
    
    {
      isModified && modDateObj && (
        <>
          <span class="mx-2">|</span>
          <span class="mr-1">Updated:</span>
          <time datetime={modDateObj.toISOString()}>{modDateStr}</time>
        </>
      )
    }
  </span>
</div>